                            Name="W1NameTextBox"
                            Grid.Column="5"
                            Width="200"
                            Margin="10,10,10,10"
                            HorizontalAlignment="Left"
                            MaxLength="100"
                            Text="Name" />

                        <Label
                            Name="W1SelectedApplicationLabel"
                            Margin="10,10,10,10"
                            Content="Application:"
                            Foreground="LightGreen" />
                        <Label
                            Name="W1SelectedApplicationName"
                            Grid.Column="1"
                            Margin="10,10,10,10"
                            Content="{Binding SelectedAppName, Converter={StaticResource EmptyStringToPlaceholderConverter}}"
                            FontStyle="Italic"
                            Foreground="White" />
                        <Button
                            Name="W1SelectAppBtn"
                            Grid.Column="2"
                            Width="60"
                            Height="20"
                            Margin="10,10,10,10"
                            HorizontalAlignment="Center"
                            Background="Black"
                            BorderBrush="Yellow"
                            BorderThickness="0"
                            Click="openProgramFiles_Click"
                            Content="📂"
                            Foreground="Yellow" />
                        <Label
                            Name="W1SelectedFileLabel"
                            Margin="10,10,10,10"
                            Content="File:"
                            Foreground="LightGreen" />
                        <Label
                            Name="W1SelectedFileName"
